<h1>détails</h1>
<div>
    <p>voiture id : {{ car.id }}
    <p>modèle : {{ car.model }}
    <p>prix : {{ car.price }} </p>
    {% if car.image.name is defined %}
    <img src="{{ asset('images/')~car.image.name }}">
        {% else %}
        <p>pas d'image de la voiture</p>
    {% endif %}

    {% for keyword in car.keywords %}
        <p>Mot clé : {{ keyword.name }} {%  if not loop.last %}, {% endif %}</p>
    {% endfor %}

    <a href="{{ path("home") }}">Retour à la page d'accueil</a>
</div>
